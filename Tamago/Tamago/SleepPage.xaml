<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamago.SleepPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="SLEEPING PAGE" FontSize="20" HorizontalOptions="Center"/>
            <Label x:Name="currentTired" Text="yo" FontSize="20"  HorizontalOptions="Center"/>
            <ProgressBar x:Name="tiredBar" ProgressColor="Red" BackgroundColor="Transparent" ScaleX="0.9" ScaleY="1"/>
            <Label Text="Don't touch your phone for 1 minute so your stickman can get some rest!" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" Padding="10"/>
            <Image Source="sleepingimage" Scale="0.8"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>