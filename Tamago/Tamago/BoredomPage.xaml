<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamago.BoredomPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="BOREDOM PAGE" FontSize="20" HorizontalOptions="Center"/>
            <Label x:Name="currentBoredom" Text="yo" FontSize="20"  HorizontalOptions="Center"/>
            <ProgressBar x:Name="boredomBar" ProgressColor="Red" BackgroundColor="White" ScaleX="0.5" ScaleY="0.6"/>
            <Label Text="Play a game with your stickman to entertain him! Click when the green square appears on your screen!" 
                   FontSize="13" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" Padding="15"/>
            <ImageButton x:Name="gameButton" Source="boredombutton" Clicked="Button_Pressed"/>
            <Image Source="reactquickly" Scale="0.8"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>